@model VirtualWallet.Dto.ViewModels.TransferViewModels.TransferViewModel

<div class="h-full flex items-center justify-center px-4">
    <form class="bg-white shadow-md rounded-lg px-8 py-6 w-96" asp-controller="Transfer" asp-action="Add" method="post">

        <div class="mb-4 text-center text-gray-900 text-3xl font-extrabold dark:text-neutral-50">Transfer Details</div>

        <!-- Direction Selection -->
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-medium">Transfer Direction</label>
            <div class="mt-2">
                <label class="inline-flex items-center">
                    <input type="radio" class="form-radio text-purple-500" asp-for="HasCardSender" value="true" checked>
                    <span class="ml-2 text-gray-700">Card to Wallet</span>
                </label>
                <label class="inline-flex items-center ml-6">
                    <input type="radio" class="form-radio text-purple-500" asp-for="HasCardSender" value="false">
                    <span class="ml-2 text-gray-700">Wallet to Card</span>
                </label>
            </div>
        </div>

        <!-- Card Selection -->
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-medium">Select Card</label>
            <select class="form-select mt-1 block w-full" asp-for="CardId">
                <option value="" disabled selected>Select a card</option>
                @foreach (var card in ViewData["Cards"] as List<VirtualWallet.Dto.ViewModels.CardViewModels.SelectCardViewModel>)
                {
                    <option value="@card.Id">Card ending in @card.CardNumber.ToString().Substring(@card.CardNumber.ToString().Length - 4)</option>
                }
            </select>
        </div>

        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-medium">Amount</label>
            <input type="text" class="form-input mt-1 block w-full" name="amount" x-model="amount">
        </div>

        <!-- Currency Selection -->
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-medium">Select Currency</label>
            <select class="form-select mt-1 block w-full" asp-for="CurrencyId">
                <option value="" disabled selected>Select a currency</option>
                @foreach (var currency in ViewData["Currencies"] as List<VirtualWallet.Dto.ViewModels.CurrencyViewModels.CurrencyViewModel>)
                {
                    <option value="@currency.Id">@currency.Code.ToString().ToUpper()</option>
                }
            </select>
        </div>

        <!-- Wallet ID (Hidden Input) -->
        <div class="mb-4">
            <input type="hidden" asp-for="WalletId" />
        </div>

        <button type="submit" class="w-full px-4 py-2 bg-purple-500 text-white font-medium rounded hover:bg-purple-400 transition">Submit Transfer</button>
    </form>
</div>