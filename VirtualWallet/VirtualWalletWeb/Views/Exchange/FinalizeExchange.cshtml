@model VirtualWallet.Dto.ExchangeDto.GetExchangeDto


<div class="h-full flex items-center justify-center  px-4">

    <div method="post" enctype="multipart/form-data"
         class="flex mx-auto justify-center max-w-xl w- w-2/3 px-8 py-8 bg-neutral-100 rounded-3xl shadow-2xl border-purple-400 border flex-col justify-center items-center inline-flex
				dark:bg-neutral-800 dark:border-puerple-400">

        <div class="mb-6 text-center text-gray-900 text-3xl font-extrabold dark:text-neutral-50">Successfully Exchanged Amount!</div>

        <div class="flex flex-col w-full md:flex-row md:gap-3">
            <div class="flex-1 flex-col mb-4 justify-start items-start flex">
                <div class="text-gray-700 text-sm font-medium dark:text-neutral-400">From</div>
                <input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
                       asp-for="FromCurrency" type="text" readonly>
            </div>

            <div class="flex-1 flex-col mb-4 justify-start items-start flex">
                <div class="text-gray-700 text-sm font-medium dark:text-neutral-400">To</div>
                <input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
                       asp-for="ToCurrency" type="text" readonly>
            </div>
        </div>
        <div class="flex flex-col w-40 md:flex-row md:gap-3">

            <div class="flex-1 flex-col mb-4 justify-start items-start flex">
                <div class="text-gray-700 text-sm font-medium dark:text-neutral-400">At Rate</div>
                <input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
                       asp-for="Rate" type="text" readonly>
            </div>

        </div>
        <div class="flex flex-col w-full md:flex-row md:gap-3">
            <div class="flex-1 flex-col mb-4 justify-start items-start flex">
                <div class="text-gray-700 text-sm font-medium dark:text-neutral-400">From @((this.Model == null) ? "" : Model.FromCurrency)</div>
                <input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
                       asp-for="Amount" type="text" readonly>
            </div>

            <div class="flex-1 flex-col mb-4 justify-start items-start flex">
                <div class="text-gray-700 text-sm font-medium dark:text-neutral-400">To @((this.Model == null) ? "" : Model.ToCurrency)</div>
                <input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
                       asp-for="ExchangedAmout" type="text" readonly>
            </div>
        </div>


        @if (this.ViewData["ErrorMessage"] is not null)
        {
            <span class="text-red-600 text-base mb-4">
                @this.ViewData["ErrorMessage"]
            </span>
        }
        <div class="flex flex-col w-full mb-0 md:mb-2 md:flex-row md:gap-3">


            <button asp-controller="Home" asp-action="Index" class="w-full px-4 py-4 bg-purple-500 rounded-md shadow justify-center items-center inline-flex hover:bg-purple-400 transition duration-300" type="submit">
                <div class="text-neutral-50 text-base font-medium">
                    <div class="text-base">
                        <span>Dashboard</span>
                    </div>
                </div>
            </button>

        </div>


    </div>
</div>