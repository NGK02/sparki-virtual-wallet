@model VirtualWallet.Dto.ExchangeDto.GetExchangeDto
@{
	 int? loggedUserId = Context.Session.GetInt32("userId");

}

<div class="h-full flex items-center justify-center  px-4">

	<div method="post" enctype="multipart/form-data"
		 class="flex flex-col items-center justify-center max-w-sm w-full px-8 py-8 bg-neutral-100 rounded-3xl shadow-2xl border-purple-400 border flex-col items-center
				dark:bg-neutral-800 dark:border-puerple-400">

		<div class="mb-8 text-center text-neutral-900 text-3xl font-extrabold dark:text-neutral-50">Exchange successful</div>

		<div class="flex flex-col w-full md:flex-row md:gap-3">
			<div class="flex-1 flex-col mb-4 justify-start items-start flex">
				<div class="text-neutral-700 text-sm font-medium dark:text-neutral-400">From currency</div>
				<input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
					   asp-for="FromCurrency" type="text" readonly>
			</div>

			<div class="flex-1 flex-col mb-4 justify-start items-start flex">
				<div class="text-neutral-700 text-sm font-medium dark:text-neutral-400">To currency</div>
				<input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
					   asp-for="ToCurrency" type="text" readonly>
			</div>
		</div>

		<div class="flex flex-col w-full md:flex-row md:gap-3">
			<div class="flex-1 flex-col mb-4 justify-start items-start flex">
				<div class="text-neutral-700 text-sm font-medium dark:text-neutral-400">From amount</div>
				<input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
					   asp-for="Amount" type="text" readonly>
			</div>

			<div class="flex-1 flex-col mb-4 justify-start items-start flex">
				<div class="text-neutral-700 text-sm font-medium dark:text-neutral-400">To amount</div>
				<input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
					   asp-for="ExchangedAmout" type="text" readonly>
			</div>
		</div>

		<div class="w-full mb-8 flex-col justify-start items-start flex">
				<div class="text-neutral-700 text-sm font-medium dark:text-neutral-400">Rate</div>
				<input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
					   asp-for="Rate" type="text" readonly>
		</div>

		@if (this.ViewData["ErrorMessage"] is not null)
		{
			<span class="text-red-600 text-base mb-4">
				@this.ViewData["ErrorMessage"]
			</span>
		}

		<a asp-controller="Dashboard" asp-action="Index" asp-route-id="@loggedUserId" class="h-fit w-full p-3 bg-purple-500 text-center text-neutral-50 rounded-md shadow hover:bg-purple-400 focus:outline-none transition duration-300" type="submit">
			Dashboard
		</a>

	</div>
</div>