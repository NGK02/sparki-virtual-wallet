@model VirtualWallet.Dto.ViewModels.ExchangeViewModels.CreateExchangeViewModel
@{
    decimal expectedAmount = decimal.Round(ViewBag.ExpectedAmount, 2, MidpointRounding.AwayFromZero);
}

<div class="h-full flex items-center justify-center  px-4">
    <form enctype="multipart/form-data" asp-controller="Exchange" asp-action="FinalizeExchange" method="post">

        <div class="flex flex-col items-center justify-center max-w-sm w-full px-8 py-8 bg-neutral-100 rounded-3xl shadow-2xl border-purple-400 border flex-col items-center
				dark:bg-neutral-800 dark:border-puerple-400">

            <div class="mb-8 text-center text-neutral-900 text-3xl font-extrabold dark:text-neutral-50">Confirm Exchange</div>

            <div class="flex flex-col w-full md:flex-row md:gap-3">
                <div class="flex-1 flex-col mb-4 justify-start items-start flex">
                    <div class="text-neutral-700 text-sm font-medium dark:text-neutral-400">From currency</div>
                    <input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
                           asp-for="From" type="text" readonly>
                </div>

                <div class="flex-1 flex-col mb-4 justify-start items-start flex">
                    <div class="text-neutral-700 text-sm font-medium dark:text-neutral-400">To currency</div>
                    <input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
                           asp-for="To" type="text" readonly>
                </div>
            </div>

            <div class="flex flex-col w-full md:flex-row md:gap-3">
                <div class="flex-1 flex-col mb-4 justify-start items-start flex">
                    <div class="text-neutral-700 text-sm font-medium dark:text-neutral-400">From amount</div>
                    <input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
                           asp-for="Amount" type="text" readonly>
                </div>

                <div class="flex-1 flex-col mb-4 justify-start items-start flex">
                    <div class="text-neutral-50 text-sm font-medium text-neutral-700 dark:text-neutral-400">To expected amount</div>
                    <input class="placeholder-neutral-900 text-neutral-900 w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50 dark:placeholder-neutral-50
						focus:outline focus:outline-purple-400"
                           placeholder="@(expectedAmount)" type="text" readonly>
                </div>
            </div>

            <div class="w-full mb-8 flex-col justify-start items-start flex">
                <div class="text-neutral-50 text-sm font-medium text-neutral-700 dark:text-neutral-400">Expected Rate</div>
                <input class="placeholder-neutral-900 text-neutral-900 w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50 dark:placeholder-neutral-50
						focus:outline focus:outline-purple-400"
                       placeholder="@this.ViewBag.Rate" type="text" readonly>
            </div>
            @*Rate и ExpectedAmount през модела вместо ViewBag?*@

            @if (this.ViewData["ErrorMessage"] is not null)
            {
                <span class="text-red-600 text-base mb-4">
                    @this.ViewData["ErrorMessage"]
                </span>
            }

            <div class="w-full flex md:flex-row flex-col justify-center items-center gap-3">
                <button asp-action="CreateExchange" class="h-fit w-full md:flex-1 p-3 bg-purple-500 text-neutral-50 rounded-md shadow hover:bg-purple-400 focus:outline-none transition duration-300" type="submit">
                    Edit
                </button>

                <button class="h-fit w-full md:flex-1 p-3 bg-purple-500 text-neutral-50 rounded-md shadow hover:bg-purple-400 focus:outline-none transition duration-300" type="submit">
                    Confirm
                </button>
            </div>

        </div>
    </form>
</div>