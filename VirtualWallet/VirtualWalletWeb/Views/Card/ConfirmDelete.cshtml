@{
    int? loggedUserId = Context.Session.GetInt32("userId");
}

<div class="h-full flex items-center justify-center px-4">
    <div class="flex mx-auto justify-center max-w-md w-full px-8 py-8 bg-neutral-100 rounded-3xl shadow-2xl border-purple-400 border flex-col justify-center items-center inline-flex
				dark:bg-neutral-800 dark:border-puerple-400">

        <div class="mb-4 text-center text-neutral-900 text-xl font-extrabold dark:text-neutral-50">Are you sure you want to delete this card?</div>

        <div class="w-full flex md:flex-row flex-col justify-center items-center gap-3">
            <form class="md:flex-1 w-full m-0 p-0" asp-controller="Card" asp-action="Delete" asp-route-cardId="@ViewBag.CardId" method="post">
                <button class="h-fit w-full p-3 bg-purple-500 text-neutral-50 rounded-md shadow hover:bg-purple-400 focus:outline-none transition duration-300" type="submit">
                    Confirm
                </button>
            </form>

            @* Тук не съм сигурен дали трябва да връща към дашборда и по този начин. Също така раутинга не работи ако е бутон.*@
            <a class="h-fit w-full md:flex-1 p-3 bg-purple-500 text-center text-neutral-50 rounded-md shadow hover:bg-purple-400 focus:outline-none transition duration-300" asp-controller="Dashboard" asp-action="Index" asp-route-userId="@loggedUserId" method="get">
                Cancel
            </a>
        </div>
    </div>
</div>