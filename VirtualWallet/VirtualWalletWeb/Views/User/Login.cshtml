@model VirtualWallet.Dto.ViewModels.UserViewModels.Login

<div class="h-full flex items-center justify-center px-4">

	<form asp-controller="User" asp-action="Login" method="post"
	class="flex mx-auto justify-center max-w-md w-96 px-8 py-8 bg-neutral-100 rounded-3xl shadow-2xl border-purple-400 border flex-col justify-center items-center inline-flex
				dark:bg-neutral-800 dark:border-puerple-400">

		<div class="mb-4 text-center text-neutral-900 text-3xl font-extrabold dark:text-neutral-50">Sign in</div>

		<div class="w-full mb-4 flex-col justify-start items-start flex">
			<div class="text-neutral-700 text-xs font-medium dark:text-neutral-400">Username</div>
			<input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex 
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
				   asp-for="Username" type="text" placeholder=" ">
			<div class="text-sm font-normal text-red-600 leading-tight">
				<span asp-validation-for="Username"></span>
			</div>
		</div>

		<div class="w-full mb-6 flex-col justify-start items-start flex">
			<div class="text-neutral-700 text-xs font-medium dark:text-neutral-400">Password</div>
			<input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex 
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
				   asp-for="Password" type="password" placeholder=" ">
			<div class="text-sm font-normal text-red-600 leading-tight">
				<span asp-validation-for="Password"></span>
			</div>
		</div>

		@if (this.ViewData["ErrorMessage"] is not null)
		{
			<span class="text-red-600 text-base mb-4">
				@this.ViewData["ErrorMessage"]
			</span>
		}

		<button class="w-full px-4 py-4 bg-purple-500 rounded-md shadow justify-center items-center inline-flex focus:outline-none  hover:bg-purple-400 transition duration-300" type="submit">
			<div class="text-neutral-50 text-sm font-medium">
				<form asp-controller="User" asp-action="Login" method="post">
					<div class="text-sm">
						<span>Sign in</span>
					</div>
				</form>
			</div>
		</button>

	</form>

</div>