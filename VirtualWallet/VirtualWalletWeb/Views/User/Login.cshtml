@model VirtualWallet.Dto.ViewModels.UserViewModels.Login

<div class="h-full flex items-center justify-center">

	<form asp-controller="User" asp-action="Login" method="post"
		  class="flex mx-auto justify-center w-80 px-8 py-8 bg-neutral-200 rounded-3xl border border-neutral-100 flex-col justify-center items-center inline-flex
				dark:bg-neutral-800 dark:border-neutral-700">

		<div class="mb-4 text-center text-gray-900 text-3xl font-extrabold dark:text-white">Sign in</div>

		<div class="w-full mb-4 flex-col justify-start items-start flex">
			<div class="text-gray-700 text-xs font-medium dark:text-neutral-400">Username</div>
			<input class="w-full px-3 py-2 bg-neutral-300 rounded-md outline-1 justify-start items-center inline-flex dark:bg-neutral-700
						focus:outline focus:outline-purple-400"
				   asp-for="Username" type="text" placeholder=" ">
			<div class="text-xs font-normal text-red-600 leading-tight">
				@*<input asp-for="Username" type="text" placeholder=" " />*@
				<span asp-validation-for="Username"></span>
			</div>
		</div>

		<div class="w-full mb-6 flex-col justify-start items-start flex">
			<div class="text-gray-700 text-xs font-medium dark:text-neutral-400">Password</div>
			<input class="w-full px-3 py-2 bg-neutral-300 rounded-md outline-1 justify-start items-center inline-flex dark:bg-neutral-700
						focus:outline focus:outline-purple-400"
				   asp-for="Password" type="password" placeholder=" ">
			<div class="text-xs font-normal text-red-600 leading-tight">
				@*<input asp-for="Password" type="password" placeholder=" " />*@
				<span asp-validation-for="Password"></span>
			</div>
		</div>

		@if (this.ViewData["ErrorMessage"] is not null)
		{
			<span class="text-red-600 text-xs mb-4">
				@this.ViewData["ErrorMessage"]
			</span>
		}

		<button class="w-full px-4 py-4 bg-purple-500 rounded-md shadow justify-center items-center inline-flex hover:bg-purple-400 transition duration-300" type="submit">
			<div class="text-white text-sm font-medium">
				<form asp-controller="User" asp-action="Login" method="post">
					<div>
						<span>Sign in</span>
					</div>
				</form>
			</div>
		</button>

	</form>

</div>