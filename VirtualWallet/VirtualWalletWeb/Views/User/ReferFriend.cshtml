@model VirtualWallet.Dto.ViewModels.UserViewModels.ReferFriend

<div class="h-full flex items-center justify-center px-4">
    <form asp-controller="User" asp-action="Login" method="post"
	class="flex flex-col items-center justify-center max-w-sm w-full px-8 py-8 bg-neutral-100 rounded-3xl shadow-2xl border-purple-400 border flex-col items-center
				dark:bg-neutral-800 dark:border-puerple-400">

        <div class="flex flex-col justify-center items-center w-full">
			<div class="mb-4 text-center text-neutral-900 text-3xl font-extrabold dark:text-neutral-50">
				Refer a friend
			</div>

			<div class="w-full mb-6 flex-col justify-start items-start flex">
				<div class="text-neutral-700 text-xs font-medium dark:text-neutral-400">Email</div>
				<input class="w-full px-3 py-2 bg-neutral-200 rounded-md outline-1 justify-start items-center inline-flex
						dark:bg-neutral-700 dark:text-neutral-50
						focus:outline focus:outline-purple-400"
					   asp-for="Email" type="text" placeholder=" ">
				@*<div class="text-sm font-normal text-red-600 leading-tight">
					<span asp-validation-for="Email"></span>
				</div>*@
			</div>

			@if (this.ViewData["ErrorMessage"] is not null)
			{
				<span class="text-red-600 text-base mb-4">
					@this.ViewData["ErrorMessage"]
				</span>
			}

			<button asp-controller="User" asp-action="ReferFriendFinalize" method="post" class="h-fit w-full md:flex-1 p-3 bg-purple-500 text-neutral-50 rounded-md shadow hover:bg-purple-400 focus:outline-none transition duration-300" type="submit">
				Refer
			</button>
        </div>


    </form>
</div>