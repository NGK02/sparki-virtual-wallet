@model VirtualWallet.Dto.ViewModels.UserViewModels.Login

<div class="h-full flex items-center justify-center px-4">
	<form asp-controller="User" asp-action="ResendConfirmationEmail" method="post"
	class="flex flex-col items-center justify-center w-1/4 px-8 py-8 bg-neutral-100 rounded-3xl shadow-2xl border-purple-400 border flex-col items-center
				dark:bg-neutral-800 dark:border-puerple-400">

		<div class="mb-4 text-center text-neutral-900 text-3xl font-extrabold dark:text-neutral-50">Email Not Confirmed</div>

		<div class="text-center mb-4">
			<p class="text-neutral-900 dark:text-neutral-50">Confirm your account by clicking on the link we sent to your email.</p>
		</div>

		<input type="hidden" asp-for="Username" />
		<input type="hidden" asp-for="Password" />

		<button class="w-full px-4 py-4 bg-purple-500 rounded-md shadow justify-center items-center inline-flex focus:outline-none  hover:bg-purple-400 transition duration-300" type="submit">
			<div class="text-neutral-50 text-sm font-medium">
				<div class="text-base">
					<span>Resend Confirmation Email</span>
				</div>
			</div>
		</button>
	</form>
</div>