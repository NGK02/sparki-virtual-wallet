@model VirtualWallet.Dto.ViewModels.UserViewModels.GetUserView
@{
    string ProfilePicPath = this.Model.ProfilePicPath ?? Url.Content("~/assets/pfp.jpg");
    int userId = this.ViewBag.userId;
}



<div class="w-full lg:w-4/12 px-4 mb-32 mx-auto">
    <div class="border-2 border-purple-400 text-center relative flex flex-col items-center min-w-0 break-words bg-white w-full mb-6 pb-4 shadow-xl rounded-lg mt-16 dark:bg-neutral-800 dark:text-neutral-50">

        <div class="flex flex-wrap justify-center">
            <div class="w-full px-4 flex mt-2 justify-center">

                <img alt="Profile picture" src="@ProfilePicPath" class="object-cover w-32 h-32 -m-16 -ml-20 lg:-ml-16 mb-4 rounded-full md:mt-0">

            </div>
            <div class="flex flex-col">

                <h3 class="text-xl font-semibold leading-normal mb-2 text-blueGray-700 ">
                    @Model.FirstName @Model.LastName
                </h3>
                <div class="text-base leading-normal mt-0 mb-2 text-blueGray-400 font-bold ">
                    <i class=" mr-2 text-lg text-blueGray-400"></i>
                    @Model.Username
                </div>
                <div class="w-full px-4 text-center">
                    <div class="flex justify-center py-4 lg:pt-4 pt-8">
                        <div class="mr-4 p-3 text-center">
                            <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600">
                                @Model.transactionsCount
                            </span>
                            <span class="text-sm text-blueGray-400">Transactions</span>
                        </div>
                        <div class="mr-4 p-3 text-center">
                            <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600">
                                @Model.CardsCount
                            </span>
                            <span class="text-sm text-blueGray-400">Cards</span>
                        </div>
                        @*<div class="lg:mr-4 p-3 text-center">
                        <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600">
                        89
                        </span>
                        <span class="text-sm text-blueGray-400">Transfers</span>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
        @*<div class="flex flex-col justify-center items-center text-center pb">*@
            <div class="mb-2 text-blueGray-600 mt-2">
                <i class="fas fa-briefcase mr-2 text-lg text-blueGray-400"></i>
                @Model.Email
            </div>
            <div class="mb-2 text-blueGray-600">
                <i class="fas fa-university mr-2 text-lg text-blueGray-400"></i>
                @Model.PhoneNumber
            </div>
            <div class="flex justify-center items-center mb-2 text-blueGray-600">
                <i class=" mr-2 text-lg text-blueGray-400"></i>

                @if (Model.RoleId == (int)RoleName.User)
                {
                    <div class="flex items-center w-fit px-3 py-1 rounded-full gap-x-2 border border-emerald-500 bg-emerald-200/60 dark:bg-neutral-800">
                        <span class="h-1.5 w-1.5 rounded-full bg-emerald-500"></span>
                        <h2 class="text-sm font-normal text-emerald-500">Active</h2>
                    </div>
                }
                else if (Model.RoleId == (int)RoleName.Blocked)
                {
                    <div class="flex w-fit items-center w-fit px-3 py-1 rounded-full gap-x-2 border border-red-500 bg-red-300 dark:bg-neutral-800">
                        <span class="h-1.5 w-1.5 rounded-full bg-neutral-950 dark:bg-red-500 "></span>
                        <h2 class="text-sm font-normal text-neutral-950 dark:text-red-500">Blocked</h2>
                    </div>
                }
                else if (Model.RoleId == (int)RoleName.Admin)
                {
                    <div class="flex justify-center items-center flex-row text-base ttext-neutral-900 dark:text-neutral-50">
                        <span>Admin</span>
                    </div>
                }
            </div>
            <div class="h-16 w-2/3 flex justify-center items-center">

                <a asp-controller="User" asp-action="EditUser" asp-route-id="@userId" method="get" class="h-fit w-48 mt-6 md:flex-1 p-3 bg-purple-500 text-neutral-50 rounded-md shadow hover:bg-purple-400 focus:outline-none transition duration-300" >
                    Edit Profile
                </a>
            </div>

       @* </div>*@


    </div>
</div>
