<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Sparki</title>
	<link href="~/main.css" rel="stylesheet" />
	<script>
		// On page load or when changing themes, best to add inline in `head` to avoid FOUC
		if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
			document.documentElement.classList.add('dark');
		} else {
			document.documentElement.classList.remove('dark')
		}
	</script>

</head>

<body class="bg-white dark:bg-neutral-900">
	<nav class="bg-transparent">
		<div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
			<a href="/Home/Index" class="flex items-center">
				<div class="relative">
					<img src="~/assets/smalllogo2black.png" class="h-7 mr-3 block dark:hidden" alt="Sparki logo" />
					<img src="~/assets/smalllogo2white.png" class="h-7 mr-3 hidden dark:block" alt="Sparki logo" />
					<img src="~/assets/smalllogo2purple.png" class="absolute top-0 h-7 mr-3 opacity-0 hover:opacity-100 transition duration-300" alt="Sparki logo" />
				</div>
			</a>
			<svg class="h-6 w-6 cursor-pointer md:hidden block text-neutral-500
						rounded-lg md:hidden hover:bg-neutral-100 transition duration-300 focus:outline-none focus:ring-2 focus:ring-gray-200
						dark:hover:bg-neutral-700"
						id="menu-button" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
			</svg>

			<div class="hidden w-full md:block md:w-auto" id="menu">
				<ul class="font-semibold flex flex-col p-4 md:p-0 mt-4 border bg-neutral-50 border-neutral-100 rounded-lg md:flex-row
							md:space-x-8 md:mt-0 md:border-0 md:bg-transparent
							dark:bg-neutral-800 dark:border-neutral-700 dark:md:bg-transparent">
					<li>
						<a href="#" class="block py-2 pl-3 pr-4 text-neutral-950 rounded hover:bg-neutral-100
											md:hover:bg-transparent md:hover:text-purple-400 transition duration-300 ease-in-out md:p-0 dark:text-white
											md:dark:hover:text-purple-400 dark:hover:bg-neutral-700 dark:hover:text-white md:dark:hover:bg-transparent">API</a>
					</li>
					<li>
						<a href="#" class="block py-2 pl-3 pr-4 text-neutral-950 rounded hover:bg-neutral-100
											md:hover:bg-transparent md:hover:text-purple-400 transition duration-300 ease-in-out md:p-0 dark:text-white
											md:dark:hover:text-purple-400 dark:hover:bg-neutral-700 dark:hover:text-white md:dark:hover:bg-transparent">Log in</a>
					</li>
					<li>
						<a href="#" class="block py-2 pl-3 pr-4 text-neutral-950 rounded hover:bg-neutral-100
											md:hover:bg-transparent md:hover:text-purple-400 transition duration-300 ease-in-out md:p-0 dark:text-white
											md:dark:hover:text-purple-400 dark:hover:bg-neutral-700 dark:hover:text-white md:dark:hover:bg-transparent">Sign up</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
	<main>
		@RenderBody()
	</main>

	<footer>
		<ul>
			<li class="relative">
				<img src="~/assets/smalllogo2black.png" class="h-7 mr-3 block dark:hidden" alt="Sparki logo" />
				<img src="~/assets/smalllogo2purple.png" class="absolute top-0 h-7 mr-3 opacity-0 hover:opacity-100 transition duration-300" alt="Sparki logo" />
			</li>
		</ul>
	</footer>

	<script>
		const button = document.querySelector('#menu-button'); // Hamburger Icon
		const menu = document.querySelector('#menu'); // Menu

		button.addEventListener('click', () => {
			menu.classList.toggle('hidden');
		});
	</script>
</body>
</html>
